{% extends 'base.html.twig' %}

{% block title %}
	Usager index
{% endblock %}

{% block body %}

	<div
		class="main-div">
		<!-- debut du block body -->
		<div class="col-8 offset-2">
			<div class="card">
				<div class="card-header">
					<h3>
						<i class="fas fa-user-check"></i>
						Mon Compte</h3>
				</div>
				<div class="card-body">
					<table class="table table-striped table-sm table-hover">
						<tbody>
							<tr>
								<th>N° Client</th>
								<td>{{usagers.id}}</td>
							</tr>
							<tr>
								<th>Nom</th>
								<td>{{usagers.nom}}</td>
							</tr>
							<tr>
								<th>Prénom</th>
								<td>{{usagers.prenom}}</td>
							</tr>
							<tr>
								<th>Email</th>
								<td>{{usagers.email}}</td>
							</tr>
							<tr>
								<th>Activité</th>
								<td>
									<a class="btn btn-primary" href="/mi5/fr/usager/commandes">
										<span class="badge badge-light">0</span>
										Commande(s)
									</a>
								</td>
							</tr>
						</tbody>
					</table>
				</div>


			</div>
		</div>
		<!-- fin du block body -->
	</div>

{% endblock %}
