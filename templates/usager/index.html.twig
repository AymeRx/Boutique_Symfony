{% extends 'base.html.twig' %}

{% block title %}
	Usager index
{% endblock %}

{% block body %}

	{% if app.user %}

		<div
			class="main-div">
			<!-- debut du block body -->
			<div class="col-8 offset-2">
				<div class="card">
					<div class="card-header">
						<h3>
							<i class="fas fa-user-check"></i>
							Mon Compte</h3>
					</div>
					<div class="card-body">
						<table class="table table-striped table-sm table-hover">
							<tbody>
								<tr>
									<th>N° Client</th>
									<td>{{app.user.id}}</td>
								</tr>
								<tr>
									<th>Nom</th>
									<td>{{app.user.nom}}</td>
								</tr>
								<tr>
									<th>Prénom</th>
									<td>{{app.user.prenom}}</td>
								</tr>
								<tr>
									<th>Email</th>
									<td>{{app.user.email}}</td>
								</tr>
								<tr>
									<th>Activité</th>
									<td>
										<a class="btn btn-primary" href="{{path("app_panier_commandes")}}">
											<span class="badge badge-light">{{app.user.commandes|length}}</span>
											{# nombre de commandes #}
											Commande(s)
										</a>
									</td>
								</tr>
							</tbody>
						</table>
					</div>


				</div>
			</div>
			<!-- fin du block body -->
		</div>

	{% else %}
		<div class="alert alert-danger">
			<p>Vous devez être connecté pour accéder à cette page.</p>
		</div>
	{% endif %}

{% endblock %}
