{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

	<div class="col-md-10">
		<div class="main-div">
			{% if nombreProduits == 0 %}
				<div class="main-div">
					<div class="card col-md-12">
						<div class="card-header">
							<h1>
								<i class="fas fa-shopping-cart"></i>
								{{ nombreProduits }}
								Produit(s) :
								<b>{{ total|number_format(2, ',', ' ')}}€</b>
							</h1>
							<div class="col-md-12 btn-group btn-group-lg" role="group">
								<a class="btn btn-primary" href="{{ path('app_boutique_index') }}">Commencer les Courses</a>
							</div>
						</div>
						<div class="card-body"></div>
					</div>
				</div>
			{% else %}
				<div class="card col-md-12">
					<div class="card-header">
						<h1>
							<i class="fas fa-shopping-cart"></i>
							{{ nombreProduits }}
							Produit(s) :
							<b>{{ total|number_format(2, ',', ' ')}}€</b>
						</h1>
						<div class="col-md-12 btn-group btn-group-lg" role="group">
							<a class="btn btn-primary" href="{{ path('app_boutique_index') }}">Continuer les Courses</a>
							<a class="btn btn-primary" href="">Passer la Commande</a>
						</div>
					</div>
					<div class="card-body">
						<div class="row">
							<table class="table table-striped table-sm table-hover">
								<thead>
									<tr>
										<th></th>
										<th>Produit</th>
										<th class="text-right">Prix</th>
										<th>Quantite</th>
										<th class="text-right">Total</th>
										<th>Supprimer</th>
									</tr>
								</thead>
								<tbody>
									{% for produit in contenuPanier %}
										<tr>
											<td><img src="{{ asset(produit.produit.visuel) }}" class="cart-img-produit" alt="{{ produit.produit.libelle }}"></td>
											<td>
												<a href="{{ path('app_boutique_rayon', {'idCategorie': produit.produit.idCategorie}) }}">
													<b>{{ produit.produit.libelle }}</b>
												</a>
											</td>
											<td class="text-right">{{ produit.produit.prix|number_format(2, ',', ' ')}}€</td>
											<td>
												<a href="{{ path('app_panier_enlever', {'idProduit': produit.produit.id, 'quantite':1}) }}">
													<i class="fas fa-minus-square text-muted"></i>
												</a>
												{{ produit.quantite }}
												<a href="{{ path('app_panier_ajouter', {'idProduit': produit.produit.id, 'quantite':1}) }}">
													<i class="fas fa-plus-square text-muted"></i>
												</a>
											</td>
											<td class="text-right">{{ produit.produit.prix * produit.quantite}}€</td>
											<td>
												<a href="{{ path('app_panier_supprimer', {'idProduit': produit.produit.id}) }}">
													<i class="fas fa-trash text-muted" data-toggle="tooltip" title="" data-placement="right" data-html="true" data-original-title="Supprimer"></i>
												</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
								<thead>
									<tr>
										<th class="text-right" colspan="4">
											Total
										</th>
										<th class="text-right">
											{{total|number_format(2, ',', ' ')}}
											€
										</th>
										<th>
											<a href={{path("app_panier_vider")}}>
												<i class="fas fa-trash text-muted" data-toggle="tooltip" title="Vider le Panier" data-placement="right" data-html="true"></i>
											</a>
										</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			{% endif %}
		</div>
	</div>

{% endblock %}
