{% extends 'base.html.twig' %}

{% block title %}
	Boutique
{% endblock %}

{% block body %}

	<div class="main-div">
		<div class="card col-md-12">
			<div class="card-header">
				<h1>
					<i class="fas fa-store"></i>
					{%trans%}boutique.index.boutique{%endtrans%}
					{{categories|length}}
					{%trans%}boutique.index.rayons{%endtrans%}
				</h1>
				<!--affiche le nombre de rayons-->
			</div>
			<div class="card-body row">
				{% for categorie in categories %}
					<div class="col-md-3">
							<!--lien pour accéder au rayon-->
							<div class="card clickable" onclick="location = '{{ path("app_boutique_rayon", {'idCategorie':categorie.id})}}'">
								<img
								src="{{ asset(categorie.visuel) }}" alt="{{ categorie.libelle }}">
								<!--visuel de la catégorie-->
								<div class="card-body">
									<h4 class="card-title">{{ categorie.libelle }}</h4>
									<!--nom de la catégorie-->
									<p class="card-text">
										<i>{{ categorie.texte }}</i>
										<!--description de la catégorie-->
									</p>
								</div>
							</div>
						</div>
				{% endfor %}
			</div>
		</div>
	</div>


{% endblock %}
