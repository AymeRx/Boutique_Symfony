{% extends 'base.html.twig' %}

{% block title %}
	{{ categorie.libelle }}
{% endblock %}

{% block body %}

	<div class="main-div">
		<div class="card col-md-12">
			<div class="card-header">
				<h1>
					<i class="fas fa-store"></i>
					{% trans %}boutique.rayon.rayon{% endtrans %}
					"{{ categorie.libelle }}" : {{ produits|length }} 
					{% trans %} boutique.rayon.produit {% endtrans %}
				</h1>
			</div>
			<div class="card-body row">
            {% for produit in produits %}
                <div class="col-md-4">
					<div class="card clickable" onclick= "location ='{{path("app_panier_ajouter", {'idProduit': produit.id, 'quantite': 1} )}}'">
						<img src="{{ asset(produit.visuel) }}" class="card-img-produit" alt="{{ produit.libelle }}">
						<div class="card-body">
							<h4 class="card-title">{{ produit.libelle }}</h4>
							<p class="card-text">
								<i>{{ produit.texte }}</i>
							</p>
							<h2>
								<span class="badge badge-primary">
									<i class="fas fa-cart-plus"></i>
                                    {{ produit.prix }} â‚¬
								</span>
							</h2>
						</div>
					</div>
				</div>
		    {% endfor %}
			</div>
		</div>
	</div>

{% endblock %}

